{"$schema": "https://vega.github.io/schema/vega-lite/v5.json",

  "title": {
      "text": "IMF lending outstanding",
      "subtitle":"Credit outstanding to all members as a percentage of global GDP, %, Source: IMF, World Bank",
      "subtitleFontStyle":"italic",
      "subtitleFontSize":10,
      "anchor": "start",
      "color": "#000000",
      "subtitleColor": "#9f3eff"},
  
  "data":{"url": "https://raw.githubusercontent.com/ayofalode/ayofalode.github.io/main/data_IMF_creditOutstanding_Clean.csv"},
    
  
  "height": 300,
  "width": 300,

  "config": {
    "background":"#ffffff",
    "view": {
        "stroke": "transparent"}},

  "mark": {
    "type": "bar",
    "color": "#132fd1"},


"encoding": {
     "x": {
       "field": "Year",
       "type": "temporal",
       "axis": {
         "title": null,
         "grid": false,
         "ticks": false,
         "labelAngle": 45,
         "labelColor":"#000000"}},

      "y": {
        "field": "as a %",
        "type": "quantitative",
        "title": "",
        "axis": {
          "grid": false,
          "labelColor":"#000000"}}
}
}