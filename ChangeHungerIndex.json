{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": {
      "text": " Change In Global Hunger Index vs Populaton Growth",
      "subtitle": ["The change in global hunger index is measured over the period from 1992 to 2017 (Y)"," Population growth is measured over the period from 1992 to 2015(Y)"],
      "subtitleFontStyle": "italic",
      "subtitleFontSize": 10,
      "anchor": "start",
      "color": "black"
    },
    "config": {"background": "white", "view": {"stroke": "transparent"}},
    "data": {
      "url": "https://raw.githubusercontent.com/ayofalode/ayofalode.github.io/main/ChangePopulationHungerClean.csv",
      "format": {"type": "csv"}
    },
    "mark": {"type": "circle", "color": "#000000", "opacity": 0.8},
    "height": 350,
    "width": 300,
    "encoding": {
      "x": {
        "field": "Population growth ",
        "type": "quantitative",
        "axis": {"grid": false},
        "title": "Population growth"
      },
      "y": {
        "field": "Change in Global Hunger Index",
        "type": "quantitative",
        "axis": {"grid": false},
        "title": "Change in Global Hunger Index"
      },
      "size": {
        "field": "Population",
        "type": "quantitative",
        "title": "Population",
        "scale": {"range": [10, 800]},
        "legend": null
      },
      "color": {
        "field": "Continent",
        "type": "ordinal",
        "scale": {"scheme": "set1"},
        "legend": {"orient": "right"},
        "title": "Continent"
      },
      "tooltip": [
        {"field": "Country Name", "type": "ordinal", "title": "Country"},
        {
          "field": "Population growth ",
          "type": "quantitative",
          "title": "Population Growth",
          "format": ".0f"
        },
        {
          "field": "Change in Global Hunger Index",
          "type": "quantitative",
          "title": "Change inGlobal Hunger ",
          "format": ".2f"
        },
        {
          "field": "Population",
          "type": "quantitative",
          "title": "Population",
          "format": ","
        }
      ]
    }
  }