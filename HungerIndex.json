{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": {
      "text": "Global Hunger Index vs Population Growth",
      "subtitle": [
        "Global Hunger Index vs Populaton Growth, Source: FAO"
       
      ],
      "subtitleFontStyle": "italic",
      "subtitleFontSize": 10,
      "anchor": "start",
      "color": "black"
    },
    "config": {"background": "white", "view": {"stroke": "transparent"}},
    "data": {
      "url": "https://raw.githubusercontent.com/ayofalode/ayofalode.github.io/main/PopulationHunger.csv",
      "format": {"type": "csv"}
    },
    "mark": {"type": "circle", "color": "#000000", "opacity": 0.8},
    "height": 350,
    "width": 300,
    "encoding": {
      "x": {
        "field": "Population growth",
        "type": "quantitative",
        
        "axis": {"grid": false},
        "title": "Population Density"
      },
      "y": {
        "field": "Global Hunger",
        "type": "quantitative",
        
        "axis": {"grid": false},
        "title": "Hunger Index"},
      "size": {
        "field": "Population",
        "type": "quantitative",
        "title": "Population",
        "scale": {"range": [10, 800]},
        "legend": null
      },
      "color": {
        "field": "Continent",
        "type": "ordinal",
        "scale": {"scheme": "set1"},
        "legend": {"orient": "right"},
        "title": "Continent"
      },
      "tooltip": [
        {"field": "Country Name", "type": "ordinal", "title": "Country"},
        {
          "field": "Population growth",
          "type": "quantitative",
          "title": "Population Growth",
          "format": ".0f"
        },
        {
          "field": "Global Hunger",
          "type": "quantitative",
          "title": "Global Hunger ",
          "format": ".2f"
        },
        {
          "field": "Population",
          "type": "quantitative",
          "title": "Population",
          "format": ","
        }
      ]
    }
  }
